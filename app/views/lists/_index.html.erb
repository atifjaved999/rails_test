<div id="lists">
  <%= link_to 'Trash', trash_lists_path %>

  <h1>Lists</h1>

  <table border="1" cellpadding="5">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.id %></td>
          <td>
            <%= list.name %><br><br>
            <%= render 'lists/list_items', list_items: list.list_items, is_trash: false if list.list_items.any? %>
          </td>
          <!-- <td><%#= link_to 'Show', list %></td> -->
          <td><%= link_to 'Edit', edit_list_path(list), remote: true %></td>
          <td><%= link_to 'Destroy', soft_delete_list_path(list), remote: true, method: :post, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Delete', list, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <%#= render 'lists/lists_tbody', lists: @lists %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New List', new_list_path, remote: true %>

</div>