<div id="lists" class="col-lg-8">
  <h1>Lists</h1>
  <span class="float-right">
    <%= link_to 'New List', new_list_path, class: 'btn btn-dark btn-sm', remote: true %>
  </span><br><br>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% if @lists.any? %>
        <% @lists.each do |list| %>
          <tr>
            <td><%= list.id %></td>
            <td>
              <%= list.name %><br><br>
              <%= render 'lists/list_items', list_items: list.list_items, is_trash: false if list.list_items.any? %>
            </td>
            <!-- <td><%#= link_to 'Show', list %></td> -->
            <td><%= link_to 'Edit', edit_list_path(list), remote: true, class: 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Destroy', soft_delete_list_path(list), remote: true, method: :post, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
            <td><%= link_to 'Delete', list, remote: true, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      <% else %>
        <tr><td colspan="3"><%= no_record_found %></td></tr>
      <% end %>
    </tbody>
  </table>
</div>