<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<table border="1">
  <thead>
    <tr>
      <th>Id</th>
      <th>Item Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @list.list_items.each do |list_item| %>
    <tr>
      <td><%= list_item.id %></td>
      <td><%= list_item.name %></td>
      <td><%= link_to 'Destroy', soft_delete_list_item_path(list_item), method: :post, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Delete', list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>

</table>
<br>
<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
