<%= form_with(model: list) do |f| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br>

  <h1>New List Items</h1>
  <%= f.fields_for :list_items do |li| %>
    <div class="field">
      <%= li.label :name %>
      <%= li.text_field :name %>
    </div>
    <br>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
